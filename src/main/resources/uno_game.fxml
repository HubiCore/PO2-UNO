<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.UnoController"
            stylesheets="/table.css"
            prefWidth="1920" prefHeight="1080">

    <!-- Góra - Przeciwnik -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>

            <Label fx:id="labelPrzeciwnik"
                   text="Przeciwnik - 7 kart"
                   style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>

            <HBox fx:id="rekaPrzeciwnika"
                  alignment="CENTER"
                  spacing="5.0"/>
        </VBox>
    </top>

    <!-- Środek - Stół z kartą -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label fx:id="instrukcja"
                   text="Kliknij kartę, aby ją zagrać"
                   style="-fx-text-fill: white; -fx-font-size: 16px;"/>

            <StackPane fx:id="stol"
                       minWidth="120" minHeight="180"
                       maxWidth="120" maxHeight="180"
                       alignment="CENTER"/>
        </VBox>
    </center>

    <!-- Dół - Gracz -->
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="labelGracz"
                   text="Twoje karty"
                   style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>

            <HBox fx:id="rekaGracza"
                  alignment="CENTER"
                  spacing="10">
                <padding>
                    <Insets bottom="20" left="20" right="20"/>
                </padding>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>