<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.UnoController"
            stylesheets="/table.css"
            prefWidth="1920" prefHeight="1080">

    <left>
        <VBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Gracz Lewy - 7 kart"
                   style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 0 0 0 100; -fx-rotate: 90"/>  <!-- Dodano ujemny padding z lewej -->
            <HBox fx:id="rekaLewego"
                  alignment="CENTER"
                  spacing="5.0"
                  style="-fx-rotate: 90;"/>
        </VBox>
    </left>

    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label fx:id="labelPrzeciwnik"
                   text="Przeciwnik - 7 kart"
                   style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <HBox fx:id="rekaPrzeciwnika"
                  alignment="CENTER"
                  spacing="5.0"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label fx:id="instrukcja"
                   text="Kliknij kartę, aby ją zagrać"
                   style="-fx-text-fill: white; -fx-font-size: 16px;"/>
            <StackPane fx:id="stol"
                       minWidth="120" minHeight="180"
                       maxWidth="120" maxHeight="180"
                       alignment="CENTER"/>
        </VBox>
    </center>

    <right>
        <VBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Gracz Prawy - 7 kart"
                   style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 0 0 0 100; -fx-rotate: 90"/>
            <HBox fx:id="rekaPrawego"
                  alignment="CENTER"
                  spacing="5.0"
                  style="-fx-rotate: -90;"/>
        </VBox>
    </right>

    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="labelGracz"
                   text="Twoje karty"
                   style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <HBox fx:id="rekaGracza"
                  alignment="CENTER"
                  spacing="10">
                <padding>
                    <Insets bottom="20" left="20" right="20"/>
                </padding>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>