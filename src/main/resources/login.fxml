        <Line endX="10" endY="-10" layoutX="1880" layoutY="51" startX="-10.0" startY="10" stroke="#2eff00" strokeWidth="4.0" />
        <Line endX="0" endY="-15" layoutX="1862" layoutY="51" startX="0" startY="17" stroke="#2eff00" strokeWidth="4.0" />
        <Rectangle arcWidth="8.0" fill="#ffffff00" height="20.0" layoutX="1830.0" layoutY="43.0" stroke="#2eff00" strokeType="INSIDE" strokeWidth="4.0" width="20.0" />
        <Line endX="0" endY="0" layoutX="1834" layoutY="39" startX="20" startY="0" stroke="#2eff00" strokeWidth="4.0" />
        <Line endX="0" endY="20" layoutX="1854" layoutY="39" startX="0" startY="0" stroke="#2eff00" strokeWidth="4.0" />
        <Line endX="0" endY="-15" layoutX="1825" layoutY="51" startX="0" startY="17" stroke="#2eff00" strokeWidth="4.0" />
        <Line endX="0" endY="0" layoutX="1798" layoutY="60" startX="20" startY="0" stroke="#2eff00" strokeWidth="4.0" />
        <Line endX="0" endY="-15" layoutX="1791" layoutY="51" startX="0" startY="17" stroke="#2eff00" strokeWidth="4.0" />
        <Text fill="#2eff00" layoutX="1610" layoutY="60" strokeType="OUTSIDE" strokeWidth="0.0" text="HZ2202 no..8">
            <font>
                <Font size="20.0" />
            </font>
        </Text>

        <!-- Informacja o statusie połączenia -->
        <Label fx:id="connectionStatus" layoutX="1600.0" layoutY="320.0" textFill="#2eff00" text="Status: Niepołączono" style="-fx-font-size: 16px;" />
    </children>
</AnchorPane>