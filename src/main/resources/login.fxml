<AnchorPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.LoginController">
    <children>
        <!-- Główny tytuł -->
        <Text fill="#2eff00" layoutX="700.0" layoutY="150.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Logowanie do UNO">
            <font>
                <Font size="48.0" />
            </font>
        </Text>

        <!-- Panel logowania -->
        <Rectangle arcHeight="20.0" arcWidth="20.0" fill="#000000" height="400.0" layoutX="600.0" layoutY="200.0" stroke="#2eff00" strokeType="INSIDE" strokeWidth="2.0" width="720.0" />

        <!-- Pola logowania -->
        <Text fill="#2eff00" layoutX="650.0" layoutY="280.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nazwa użytkownika:" style="-fx-font-size: 20px;" />
        <TextField fx:id="loginTextField" layoutX="650.0" layoutY="300.0" prefWidth="620.0" prefHeight="40.0" style="-fx-font-size: 18px;" />

        <Text fill="#2eff00" layoutX="650.0" layoutY="380.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hasło:" style="-fx-font-size: 20px;" />
        <PasswordField fx:id="passwordField" layoutX="650.0" layoutY="400.0" prefWidth="620.0" prefHeight="40.0" style="-fx-font-size: 18px;" />

        <!-- Etykieta błędu -->
        <Label fx:id="errorLabel" layoutX="650.0" layoutY="460.0" textFill="red" visible="false" prefWidth="620.0" wrapText="true" style="-fx-font-size: 16px;" />

        <!-- Przyciski -->
        <Button layoutX="650.0" layoutY="520.0" mnemonicParsing="false" onAction="#handlePlayButton" prefWidth="300.0" prefHeight="60.0" text="Zaloguj i dołącz do gry" style="-fx-background-color: #000000; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        <Button layoutX="970.0" layoutY="520.0" mnemonicParsing="false" onAction="#switch_to_main_menu" prefWidth="300.0" prefHeight="60.0" text="Powrót do menu" style="-fx-background-color: #000000; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />

        <!-- Informacja o systemie pokoi -->
        <Text fill="#2eff00" layoutX="650.0" layoutY="620.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Po zalogowaniu zostaniesz przeniesiony do listy pokoi, gdzie możesz:" style="-fx-font-size: 16px;" />
        <Text fill="#2eff00" layoutX="670.0" layoutY="650.0" strokeType="OUTSIDE" strokeWidth="0.0" text="• Utworzyć własny pokój (2-4 graczy)" style="-fx-font-size: 16px;" />
        <Text fill="#2eff00" layoutX="670.0" layoutY="680.0" strokeType="OUTSIDE" strokeWidth="0.0" text="• Dołączyć do istniejącego pokoju" style="-fx-font-size: 16px;" />
        <Text fill="#2eff00" layoutX="670.0" layoutY="710.0" strokeType="OUTSIDE" strokeWidth="0.0" text="• Grać w trybie publicznym lub prywatnym" style="-fx-font-size: 16px;" />

        <!-- Elementy dekoracyjne - animacja ziemi -->
        <ImageView fitHeight="300.0" fitWidth="300.0" layoutX="1600.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@assets/textures/earth_spinning.gif" />
            </image>
        </ImageView>

        <!-- rysowanie okienka co symuluje okienko -->
        <Rectangle arcHeight="10.0" arcWidth="8.0" fill="#ffffff00" height="273.0" layoutX="1600.0" layoutY="30.0" stroke="#2eff00" strokeType="INSIDE" strokeWidth="4.0" width="300.0" />
        <Line endX="298" endY="20.0" layoutX="1600" layoutY="50" startX="2.0" startY="20.0" stroke="#2eff00" strokeWidth="4.0" />
